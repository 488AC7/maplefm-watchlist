{
  "name": "Maple.fm Watchlist",
  "version": "1.0",
  "description":
    "An extension that allows you to add items to a watchlist from Maple.fm, as well as receive desktop notifications whenever a new item is listed. It additionally adds a button to include item information while on the Nexon Forums.",
  "icons": {"16": "maple.png", "48": "maple.png", "128": "maple.png"},
  "permissions": [
    "notifications",
    "*://maple.fm/*",
    "storage",
    "cookies",
    "activeTab"
  ],
  "content_scripts": [
        {
            "matches": ["http://forum2.nexon.net/*"],
            "all_frames": true,
            "js": ["jquery-1.11.2.min.js", "bower_components/jqueryui/jquery-ui.min.js", "subcontent.js"],
            "css": ["content.css"]
        }
  ]
  ,
  "browser_action": {
    "default_icon": "maple.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": { "scripts": ["jquery-1.11.2.min.js", "bower_components/jquery-cookie/jquery.cookie.js", "background.js" ], "persistent":true },
  "manifest_version": 2,

  "web_accessible_resources": [
    "maplefm-icon.png"
  ]
}
